{
  "extends": ["@istanbuljs/nyc-config-typescript", "@istanbuljs/nyc-config-babel"],
  "all": true,
  "instrument": true,
  "check-coverage": true,
  "report-dir": "build/cypress-coverage",
  "extension": [".ts", ".tsx"],
  "exclude": [
    "dist/**",
    "main/src/test-app/**",
    "main/src/lib/test-components/**",
    "coverage/**",
    "**/*.d.ts",
    "test{,s}/**",
    "**/__tests__/**",
    "**/*.spec.{js,cjs,mjs,ts}",
    "**/*.test.{js,cjs,mjs,ts}",
    "**/*.cy.{js,cjs,mjs,ts}"
  ],
  "reporter": ["lcov", "json", "text"]
}
